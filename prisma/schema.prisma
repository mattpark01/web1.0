model AppPlatform {
  id               String   @id @default(cuid())
  platformId       String   @unique @map("platform_id") // e.g., "bank", "calendar"
  name             String
  description      String
  icon             String
  category         String   @default("productivity")
  displayOrder     Int      @default(0) @map("display_order")
  isActive         Boolean  @default(true) @map("is_active")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  
  // Relations
  coreActions      CoreAction[]
  
  @@index([isActive])
  @@index([displayOrder])
  @@map("app_platforms")
}

model CoreAction {
  id              String   @id @default(cuid())
  actionId        String   @unique @map("action_id") // e.g., "bank.send_money"
  platformId      String   @map("platform_id")
  provider        String   @default("core") // "core" | "plaid" | "google" | etc
  
  // Metadata
  name            String
  description     String
  icon            String
  category        String   @default("primary") // primary, secondary, contextual
  shortcut        String?  // Optional keyboard shortcut
  
  // Execution
  executionType   String   @default("direct") @map("execution_type") // "direct" only (agents handle "agentic")
  requiresAuth    Boolean  @default(false) @map("requires_auth")
  requiresLLM     Boolean  @default(false) @map("requires_llm")
  agenticConfig   Json?    @map("agentic_config") // Should be null for direct actions
  
  // Schema
  inputSchema     Json?    @map("input_schema")
  outputSchema    Json?    @map("output_schema")
  
  // Metadata
  metadata        Json?
  isActive        Boolean  @default(true) @map("is_active")
  
  // Timestamps
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  // Relations
  platform        AppPlatform @relation(fields: [platformId], references: [platformId], onDelete: Cascade)
  
  @@index([platformId, isActive])
  @@index([provider])
  @@index([category])
  @@index([executionType])
  @@map("core_actions")
}

// ==========================================
// AGENT-RUNTIME OWNED TABLES (READ-ONLY FOR WEB1.0)
// These tables are managed by agent-runtime
// Web1.0 has read access only via Prisma
// ==========================================

model Agent {
  id             String   @id @default(cuid())
  agentId        String   @unique @map("agent_id") // e.g., "portfolio.optimizer"
  name           String
  description    String
  icon           String
  
  // Configuration
  systemPrompt   String   @map("system_prompt")
  model          String   @default("claude-3-5-sonnet-20241022")
  temperature    Float    @default(0.3)
  maxSteps       Int      @default(10) @map("max_steps")
  
  // Capabilities
  allowedActions Json     @default("[]") @map("allowed_actions") // Array of action IDs
  requiresAuth   Boolean  @default(true) @map("requires_auth")
  
  // Metadata
  isActive       Boolean  @default(true) @map("is_active")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  
  // Relations
  agentExecutions AgentExecution[]
  
  @@index([isActive])
  @@map("agents")
}

model AgentExecution {
  id              String   @id // exec-timestamp-nonce format
  agentId         String   @map("agent_id")
  userId          String?  @map("user_id") // Nullable for anonymous
  
  // Request details
  goal            String
  context         Json?
  
  // Planning & Execution
  plan            Json?
  steps           Json?
  memory          Json?
  
  // Results
  result          Json?
  status          String   // planning, executing, completed, failed, cancelled
  error           String?
  
  // Metrics
  actionsExecuted Int      @default(0) @map("actions_executed")
  llmCalls        Int      @default(0) @map("llm_calls")
  totalTokens     Int      @default(0) @map("total_tokens")
  executionTimeMs Int      @default(0) @map("execution_time_ms")
  
  // Timestamps
  startedAt       DateTime @default(now()) @map("started_at")
  completedAt     DateTime? @map("completed_at")
  
  // Relations
  agent           Agent    @relation(fields: [agentId], references: [agentId], onDelete: Cascade)
  
  @@index([agentId])
  @@index([userId])
  @@index([status])
  @@index([startedAt])
  @@map("agent_executions")
}

model ActionExecution {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  actionId        String   @map("action_id")
  actionType      String   @map("action_type") // core, integration
  
  // Execution details
  inputData       Json     @map("input_data")
  outputData      Json?    @map("output_data")
  
  // Status tracking
  status          String   // pending, processing, completed, failed
  errorMessage    String?  @map("error_message")
  
  // Performance metrics
  executionTimeMs Int?     @map("execution_time_ms")
  llmTokensUsed   Int?     @map("llm_tokens_used")
  
  // Timestamps
  startedAt       DateTime @default(now()) @map("started_at")
  completedAt     DateTime? @map("completed_at")
  
  @@index([userId])
  @@index([actionId])
  @@index([status])
  @@index([startedAt])
  @@map("action_executions")
}

